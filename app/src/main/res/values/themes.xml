<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealTimeChatApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Customize your theme here. -->
        // set status bar color to transparent
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item> // use this attribute to change the text status color
    </style>

    <style name="ProgressbarLoadingColor" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <style name="ImageViewCornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="TextInputLayoutOutlinedBoxCornerRadius" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="SearchBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
    </style>

    <style name="TitleTextAppearance" parent="">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_corner_radius_soft</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_corner_radius_soft</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_corner_radius_soft</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_corner_radius_soft</item>
    </style>

    <style name="EditTextCustomColor" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textCursorDrawable">@drawable/shape_edittext_cursor</item>
    </style>

    <style name="EditTextCustomColorNumberType" parent="EditTextCustomColor">
        <item name="android:inputType">phone</item>
        <item name="android:layout_marginTop">@dimen/all_margin</item>
        <item name="android:padding">14dp</item>
        <item name="android:autofillHints">phone</item>
    </style>
</resources>
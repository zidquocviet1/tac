<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/all_padding_common"
    android:paddingTop="@dimen/all_padding_default"
    android:paddingEnd="@dimen/all_padding_common"
    android:paddingBottom="@dimen/all_padding_default">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+android:id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_round_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/all_margin"
        android:text="Message Requests"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@android:id/icon"
        app:layout_constraintStart_toEndOf="@android:id/icon"
        app:layout_constraintTop_toTopOf="@android:id/icon" />
</androidx.constraintlayout.widget.ConstraintLayout>
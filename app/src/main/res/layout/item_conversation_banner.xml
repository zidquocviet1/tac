<?xml version="1.0" encoding="utf-8"?>
<merge>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/layout_group_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_avatar_1"
                android:layout_width="@dimen/image_conversation"
                android:layout_height="@dimen/image_conversation"
                android:layout_marginEnd="-10dp"
                android:background="@drawable/avatar_stroke_ripple"
                android:padding="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_avatar_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_default_user_avatar"
                    app:shapeAppearanceOverlay="@style/ImageViewCornerSize50Percent" />

                <TextView
                    android:id="@+id/text_more_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:textDirection="ltr"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layout_avatar_2"
                android:layout_width="@dimen/image_conversation"
                android:layout_height="@dimen/image_conversation"
                android:layout_marginEnd="-10dp"
                android:background="@drawable/avatar_stroke_ripple"
                android:padding="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_avatar_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_default_user_avatar"
                    app:shapeAppearanceOverlay="@style/ImageViewCornerSize50Percent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_avatar_3"
                android:layout_width="@dimen/image_conversation"
                android:layout_height="@dimen/image_conversation"
                android:background="@drawable/avatar_stroke_ripple"
                android:padding="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_avatar_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_default_user_avatar"
                    app:shapeAppearanceOverlay="@style/ImageViewCornerSize50Percent" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin"
            android:text="@string/label_who_create_this_group"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textDirection="ltr"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_group_thumbnail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginStart="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/image_conversation"
        android:layout_height="@dimen/image_conversation"
        android:src="@drawable/ic_round_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:shapeAppearanceOverlay="@style/ImageViewCornerSize50Percent" />

    <TextView
        android:id="@+id/text_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/author_app_first_name"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/image_avatar"
        app:layout_constraintStart_toStartOf="@id/image_avatar"
        app:layout_constraintTop_toBottomOf="@id/image_avatar" />

    <TextView
        android:id="@+id/text_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/author_app_last_name"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/image_avatar"
        app:layout_constraintStart_toStartOf="@id/image_avatar"
        app:layout_constraintTop_toBottomOf="@id/text_first_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
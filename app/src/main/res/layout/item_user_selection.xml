<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="false"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <com.mqv.vmess.ui.components.conversation.ConversationHeaderThumbnail
        android:id="@+id/included_image_avatar"
        android:layout_width="@dimen/image_conversation_group"
        android:layout_height="@dimen/image_conversation_group"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_display_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/all_padding_common"
        android:alpha="0.8"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/author_app_full_name"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/included_image_avatar"
        app:layout_constraintEnd_toStartOf="@id/button_send_message"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/included_image_avatar"
        app:layout_constraintTop_toTopOf="@id/included_image_avatar" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/radio_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/all_padding_common"
        android:background="@null"
        android:clickable="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/base_background_color"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="30dp"
        android:outlineProvider="none"
        android:text="@string/action_send"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/radio_select"
        app:layout_constraintEnd_toEndOf="@id/radio_select"
        app:layout_constraintStart_toStartOf="@id/radio_select"
        app:layout_constraintTop_toTopOf="@id/radio_select"
        app:rippleColor="@android:color/darker_gray" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_color"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_selected_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageViewCornerSize50Percent" />

    <TextView
        android:id="@+id/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_color_default"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/image_color"
        app:layout_constraintEnd_toEndOf="@id/image_color"
        app:layout_constraintStart_toStartOf="@id/image_color"
        app:layout_constraintTop_toTopOf="@id/image_color" />

    <TextView
        android:id="@+id/text_color_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purple"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        app:layout_constraintEnd_toEndOf="@id/image_color"
        app:layout_constraintStart_toStartOf="@id/image_color"
        app:layout_constraintTop_toBottomOf="@id/image_color"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/all_padding_common"
        android:paddingTop="@dimen/all_padding_default"
        android:paddingEnd="@dimen/all_padding_common"
        android:paddingBottom="@dimen/all_padding_default"
        android:textColor="@color/color_preference_category"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>